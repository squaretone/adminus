{
  "manifest_version": 2,

  "name": "Ad Minus",
  "description": "Dismiss ad overlays.",
  "version": "0.1",

  "content_scripts": [
    {
      "matches": ["http://www.omaha.com/*"],
      "js": ["jquery-1.9.1.min.js", "content.js"]
    }
  ],

  "permissions" : [
    "tabs"
  ],

  "background": { "scripts": ["background.js"] },

  "page_action": {
    "default_icon": {
      "19": "img/icon19.png",
      "38": "img/icon38.png"
    },
    "default_title": "Remove ad overlay" // tooltip text
  },

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  }
}
